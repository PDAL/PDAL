<?xml version="1.0" encoding="utf-8"?>
<Pipeline version="1.0">
    <Writer type="writers.las">
        <Option name="filename">
            colorized.las
        </Option>
        <Filter type="filters.reprojection">
            <Option name="out_srs">
                EPSG:4326+4326
            </Option>
            <Option name="scale_x">
                0.0000001
            </Option>
            <Option name="scale_y">
                0.0000001
            </Option>
            <Filter type="filters.ferry">
                <Option name="dimension">
                    X
                    <Options>
                        <Option name="to">
                            StatePlaneX
                        </Option>
                    </Options>
                </Option>
                <Option name="dimension">
                    Y
                    <Options>
                        <Option name="to">
                            StatePlaneY
                        </Option>
                    </Options>
                </Option>
                <Reader type="readers.las">
                    <Option name="filename">
                        ../las/1.2-with-color.las
                    </Option>
                    <Option name="spatialreference">
                        EPSG:2993
                    </Option>
                </Reader>
            </Filter>
        </Filter>
    </Writer>
</Pipeline>
